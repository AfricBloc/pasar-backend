// 1. Generator & Datasource
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// 2. User model 
model User {
  // Primary key as UUID, generated by database
  id             String    @id @default(uuid()) @db.Uuid
  email          String    @unique
  emailVerified Boolean  @default(false) @map("email_verified")
  password       String?                              // nullable for OAuth-only users
  googleId       String?   @unique @map("google_id")
  username       String?   @unique
  fullName       String?   @map("full_name")
  pictureUrl     String?   @map("picture_url")
  isActive       Boolean   @default(true)             @map("is_active")
  createdAt      DateTime  @default(now())            @map("created_at")
  updatedAt      DateTime  @updatedAt                 @map("updated_at")
  lastLoginAt    DateTime?                             @map("last_login_at")
  metadata       Json      @default("{}")             // JSONB column

  // relations
  otpDatas       OtpData[]

  @@map("users")
  @@index([googleId], name: "idx_users_google_id")
  @@index([emailVerified], name: "idx_users_email_verified")
  @@index([isActive], name: "idx_users_is_active")
}

// 3. OTP model
model OtpData {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    String   @db.Uuid
  otpHash   String   @map("otp_hash")
  expiresAt DateTime @map("expires_at")
  used      Boolean  @default(false)

  createdAt DateTime @default(now()) @map("created_at")

  @@map("otp_data")
  @@index([userId], name: "idx_otp_data_user_id")
}
